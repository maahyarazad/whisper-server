{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/whisper-server.py", 
      "args": [
        "run",
        "--no-debugger",
        "--no-reload"
      ],
      "env": {
        "FLASK_APP": "whisper-server.py",
        "FLASK_ENV": "development"
      },
      "jinja": true,
      "console": "integratedTerminal"
    }
  ]
}
